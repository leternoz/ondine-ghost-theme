    <div class="site-nav-left-wrapper">
        <div class="site-nav-left site-nav-center">
            {{#if @site.logo}}
            <a class="site-nav-logo" href="{{@site.url}}">
                <img class="site-logo" src="{{img_url @site.logo size="l"}}" alt="{{@site.title}}" />
            </a>
            {{else}}
            <a class="site-nav-logo" href="{{@site.url}}">{{@site.title}}</a>
            {{/if}}
            <div class="site-nav-content">
                {{#if @site.navigation}}

                {{!-- Elements for the hamburger menu  --}}
                <input type="checkbox" id="hidden-hamburger-checkbox" />
                <span id="top-hamburger-bar" class="hamburger-bar"></span>
                <span id="middle-hamburger-bar" class="hamburger-bar"></span>
                <span id="bottom-hamburger-bar" class="hamburger-bar"></span>

                {{navigation}}
                {{/if}}
                {{#is "post"}}
                <span class="nav-post-title {{#unless @site.logo}}dash{{/unless}}">{{post.title}}</span>
                {{/is}}
            </div>
        </div>
    </div>
